{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://0nork.com/schemas/config.json",
  "title": ".0n Global Config",
  "description": "Global configuration for the .0n standard",
  "type": "object",
  "required": ["$0n"],
  "properties": {
    "$0n": {
      "type": "object",
      "required": ["type", "version"],
      "properties": {
        "type": {
          "const": "config"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "ai_provider": {
          "type": "string",
          "enum": ["anthropic", "openai", "google", "local"],
          "default": "anthropic"
        },
        "ai_model": {
          "type": "string"
        },
        "fallback_mode": {
          "type": "string",
          "enum": ["keyword", "error"],
          "default": "keyword"
        },
        "history_enabled": {
          "type": "boolean",
          "default": true
        },
        "history_retention_days": {
          "type": "integer",
          "minimum": 1,
          "maximum": 365,
          "default": 30
        },
        "cache_enabled": {
          "type": "boolean",
          "default": true
        },
        "cache_ttl_seconds": {
          "type": "integer",
          "minimum": 60,
          "maximum": 86400,
          "default": 3600
        },
        "encryption_enabled": {
          "type": "boolean",
          "default": false
        },
        "encryption_key_path": {
          "type": ["string", "null"]
        }
      }
    },
    "default_services": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
