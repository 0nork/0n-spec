{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://0nork.com/schemas/workflow.json",
  "title": ".0n Workflow",
  "description": "Multi-step automation workflow for the .0n standard",
  "type": "object",
  "required": ["$0n", "steps"],
  "properties": {
    "$0n": {
      "type": "object",
      "required": ["type", "version"],
      "properties": {
        "type": {
          "const": "workflow"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "maxLength": 500
        }
      }
    },
    "trigger": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["manual", "schedule", "webhook", "event"]
        },
        "config": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array"]
          },
          "required": {
            "type": "boolean",
            "default": false
          },
          "default": {},
          "description": {
            "type": "string"
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "service", "action"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "name": {
            "type": "string"
          },
          "service": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "params": {
            "type": "object",
            "additionalProperties": true
          },
          "output": {
            "type": "string"
          },
          "conditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "if": { "type": "string" },
                "else": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "on_error": {
          "type": "string",
          "enum": ["stop", "continue", "retry"],
          "default": "stop"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        },
        "retry_delay_ms": {
          "type": "integer",
          "minimum": 100,
          "default": 1000
        },
        "notify_on_error": {
          "type": "object",
          "properties": {
            "service": { "type": "string" },
            "channel": { "type": "string" }
          }
        }
      }
    }
  }
}
